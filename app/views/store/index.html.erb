<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1>Pragmaticカタログ</h1>

<div id="counter">
<% if @counter > 5 %>
アクセス回数：<%= @counter %>
<% end %>
</div>

<% @products.each do |product| %>
	<div class="entry">
		<%= image_tag(product.image_url) %>
		<h3><%= product.title %></h3>
		<p><%= sanitize(product.description) %></p>
		<div class="price_line">
			<span class="price"><%= number_to_currency(product.price, unit: '円', format: '%n%u') %></span>
			<%= button_to 'カートに入れる', line_items_path(product_id: product), remote: true %>
		</div>
	</div>
<% end %>
